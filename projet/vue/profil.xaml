<UserControl x:Class="vue.profil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vue"
             mc:Ignorable="d" 
            d:DesignHeight="449" d:DesignWidth="732">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"></RowDefinition >
            <RowDefinition></RowDefinition >
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="image" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Pseudo :" Foreground="BurlyWood" FontSize="20"/>
                <TextBlock Text="Sexe :" Foreground="BurlyWood" FontSize="20"/>
                <TextBlock Text="Equipe favorite :" Foreground="BurlyWood" FontSize="20"/>
                <TextBlock Text="Equipe nationale favorite :" Foreground="BurlyWood" FontSize="20"/>
               
            </StackPanel>
            <StackPanel Margin="100,0,0,0">
                <TextBlock x:Name="pseudo" Foreground="BurlyWood" FontSize="20"/>
                <TextBlock x:Name="sexe" Foreground="BurlyWood" FontSize="20"/>
                <TextBlock x:Name="equipefav" Foreground="BurlyWood" FontSize="20"/>
                <TextBlock x:Name="equipenatfav" Foreground="BurlyWood" FontSize="20"/>
                
            </StackPanel>
        </WrapPanel>
        

    </Grid>
</UserControl>
